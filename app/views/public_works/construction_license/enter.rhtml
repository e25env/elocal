  <% fields_for :applicant do |f| %>
    <tr><td colspan='3' class="section">ผู้ยื่นคำขอ</td></tr>
    <tr>
      <td class="field-name">เลขประจำตัวประชาชน</td>
      <td colspan='2'><%= f.text_field :nid, :style=>"width:300px;" %></td>
    </tr>
    <script>
    $(function(){
      function populatePerson(label) {
        var personelement = label.split(" ");
        $("#applicant_title option:selected").text(personelement[1]);
        $("#applicant_fname").val(personelement[2]);
        $("#applicant_lname").val(personelement[3]);
        var person_id= personelement[4].substring(1,(personelement[4].length-1));
		    $("#construction_applicant_id").val(person_id);
        $.ajax({url:'/main/get_person_address/'+person_id, 
          success: function(data) {
            var address= data.address
            $("#applicant_address_address").val(address.address);
            $("#applicant_address_street").val(address.street);
            $("#applicant_address_moo").val(address.moo);
            $("#applicant_address_province_id").val(address.province_id);
            $('#applicant_address_district_id').html('').load('/main/get_districts/'+address.province_id, function() {
              $("#applicant_address_district_id").val(address.district_id);
            });
            $('#applicant_address_sub_district_id').html('').load('/main/get_sub_districts/'+address.district_id, function() {
              $("#applicant_address_sub_district_id").val(address.sub_district_id);
            });
          } 
        })
      }
      $("#applicant_nid").autocomplete({
        source: "/main/person",
        minLength: 2,
        select: function(e,ui) {
          populatePerson(ui.item.label)
        }
      });
    });
    </script>
    <tr>
      <td class="field-name">คำนำหน้า</td>
      <td colspan='2'><%= f.select :title, ['นาย','นาง','นางสาว'] %></td>
    </tr>
    <tr>
      <td class="field-name">ชื่อ</td>
      <td colspan='2'><%= f.text_field :fname, :style=>"width:300px;" %></td>
    </tr>
    <tr>
      <td class="field-name">นามสกุล</td>
      <td colspan='2'><%= f.text_field :lname, :style=>"width:300px;" %></td>
    </tr>
    <tr>
      <td class="field-name">สำเนาบัตรประชาชน</td>
      <td colspan='2'><%= f.file_field :doc %></td>
    </tr>
  <% end %>
  <% fields_for :applicant_address do |f| %>
    <tr><td colspan='3' class="section">ที่อยู่ของผู้ยื่นคำขอ</td></tr>
