<table width="100%">
  <% fields_for construction do |f| %>
    <tr><td colspan='3' class="section">รายละเอียดทั่วไป</td></tr>
    <tr>
      <td class="field-name">ใบอนุญาตทำการ</td>
      <td colspan='2'><%= f.select :construction_type, ['ก่อสร้างอาคาร','ดัดแปลงอาคาร','รื้อถอนอาคาร'] %></td>
    </tr>
    <tr>
      <td class="field-name">เลขรับที่</td>
