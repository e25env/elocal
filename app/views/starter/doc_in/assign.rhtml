<%
doc = Doc.find @xvars[:doc_id]
%>
<% fields_for doc do |f| %>

      เลขที่ทะเบียนรับ
      <%= doc.rnum %>
      
    

      เลขที่หนังสือ
      <%= doc.num %>
      
    

      ลงวันที่
      <%= date_thai doc.issue_on, :date_only=>true %>
    

      จาก
      <%= doc.dfrom %>
    

      ถึง
      <%= doc.dto %>
    

      เรื่อง
      <%= doc.subject %>
    

      วัน/เวลา ที่ รับ
      <%= date_thai doc.process_at %>
    
