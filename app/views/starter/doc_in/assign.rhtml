  <%= f.text_area :summary, :cols=>50, :rows=>6, :disabled => true  %>

      เอกสารสแกน
      <%= link_to "ดาวน์โหลด", doc.dscan %>
    
  <%= f.label :assign, "มอบหมายการปฏิบัติงาน" %>
  <%= select_tag :assign, options_from_collection_for_select(User.all_but_me, :id, :full_name) %>
<% end %>
