%div(style='float:right')
  =image_tag 'add.png'
  = link_to align_text('เพิ่มส่วนงาน'), "/run/starter/add_section"
%table{:class=>'budget_table', :width=>"100%"}
  %tr{:style=>"color:white; background-color:#6A6A6A;"}
    %th(style="width:25px;") แก้ไข
    %th(style="width:25px;") ลบ
    %th(style="width:50px;") รหัส
    %th ชื่อ
    %th รหัสเอกสาร
  - @sections.each do |section|
    %tr{:style=>"background-color:##{cycle 'fff','FEFEA4'}"}
      %td= link_to image_tag('pencil.png'), "/run/starter/edit_section/#{section.id}"
      %td= link_to image_tag('cross.png'), "/run/starter/rm_section/#{section.id}", :confirm=>"กรุณายืนยัน"
      %td= section.code
      %td= link_to section.name, :action=>:subsections, :id=>section.id
      %td= section.doc_code
