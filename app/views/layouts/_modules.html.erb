<div id="middlenavigation">
  <ul>
    <% modules.each do |m| %>
      <% next unless licensed? %>
      <% if gma_module && gma_module.name==m.name %>
        <li class="mc"><%= link_to "<span id='current_module'>#{m.name}</span>","/?module=#{m.code}" %></li>
      <% else %>
        <li class="m"><%= link_to "<span>#{m.name}</span>","/?module=#{m.code}" %></li>
      <% end %>
    <% end %>
  </ul>
  <script type="text/javascript">
    $(".mm").click( function(e) {
      $("#middlenavigation").load("/main/modules",
      {module: $('span', this).text()})
      $("#sidebar_menu").load("/main/sidebar",
      {module: $('span', this).text()})
    } )
  </script>
</div>
