!!! 5
%html
  %head
    %meta(name="viewport" content="width=device-width, minimum-scale=1, maximum-scale=1")
    = stylesheet_link_tag "jquery.mobile-1.0a4.1", "jquery.mobile.splitview", "jquery.mobile.scrollview"
    = stylesheet_link_tag "sarabun", "elocal"
  :ruby
    @org= Org.last
    #@title = "#{@org.otype}#{@org.name}"
    @title = "ระบบสารสนเทศ อปท."
  %body
    = render :partial=>"songrit/split_menu"
    = render :partial=>"songrit/split_body"
    = javascript_include_tag "jquery-1.6.1.min"
    = javascript_include_tag "jquery.mobile.splitview", "jquery.mobile-1.0a4.1", "jquery.easing.1.3", "jquery.mobile.scrollview"
:javascript
  $('div').live('pagehide', function(e,ui) {
    var page = $(e.target);
    if(page.attr('data-cache') == 'never') {
      page.remove();
    };
  });